:root{--text-100:#141414;--text-50:#86868B;--text-tertiary:#ffffff;--bg-primary:#FFFCEF;--branding-100:#FDB12A;--branding-50:#FED78C}*,*::before,*::after{box-sizing:border-box;margin:0}html{font-size:62.5%;-webkit-text-size-adjust:none;text-size-adjust:none}html:focus-within{scroll-behavior:smooth}body{background-color:var(--bg-primary);color:var(--text-100);font-family:system-ui,-apple-system,BlinkMacSystemFont,segoe ui,Roboto,Oxygen,Ubuntu,Cantarell,open sans,helvetica neue,sans-serif;font-size:1.8rem;font-weight:400;line-height:1.5;letter-spacing:-.4px;text-rendering:optimizeSpeed}main{display:grid;grid-template-columns:1fr 100% 1fr}main>*{grid-column:2}main img{width:100%;grid-column:1/4}p{margin-bottom:1.6rem}a{color:var(--text-50);font-weight:400}h1{font-size:6.4rem;line-height:1.1}h2{font-size:4.8rem;margin:1.6rem 0}h3,.h3{font-size:2rem;font-weight:700}small{color:var(--text-secondary);font-size:1.4rem}hr{border:.5px solid rgba(20,20,20,.1)}img{width:100%;height:auto}.btn-primary{background-color:var(--text-100);border-radius:1.6rem;color:var(--text-tertiary);font-size:1.6rem;font-weight:700;text-decoration:none;display:inline-block;padding:1.6rem 6.4rem;margin-top:2.4rem;transition:ease-in-out .3s}.btn-primary:hover,.btn-primary:focus{background-color:var(--branding-50);color:var(--text-100)}.hero-desc{max-width:48ch;margin:12rem 0 24rem}.open-hours{background-color:#fff;border-radius:2.4rem;display:flex;flex-direction:column;gap:2.4rem;padding:3.2rem}.row{display:flex;justify-content:space-between}.bold{font-weight:700}.posts-list{display:flex;flex-direction:column;flex-wrap:wrap;gap:12rem;list-style-type:none;padding-left:0}.post-thumbnail-item{border-radius:2.4rem}.post-thumbnail{background-color:#fff;border-radius:2.4rem}.posts-list .thumbnail-cover{border-radius:2.4rem 2.4rem 0 0}.post-thumbnail-link{color:inherit;text-decoration:none}.post-thumbnail h2{font-size:2.4rem}.post-thumbnail-header{display:flex;flex-direction:column;gap:2.4rem;padding:1.6rem 2.4rem 2.4rem}time{color:var(--text-50);font-size:1.4rem}.article img{margin:-2.4rem}.article-header{display:flex;flex-direction:column;gap:1.6rem}.article-header h1{font-size:4.8rem}.article-header p{font-weight:600}.article img{margin:4.8rem 0}.more-thumbnail{display:flex;align-items:center;gap:1.6rem}.more-thumbnail-link{color:inherit;text-decoration:none}.more-thumbnail-link .thumbnail-cover{border-radius:8px;max-width:11.2rem;height:8rem}.main-footer{text-align:center;margin-top:24rem}.two-columns{display:flex;flex-direction:column}.main-footer a{text-decoration:none}.main-footer ul{list-style-type:none;padding-left:0;margin-bottom:4rem}.main-footer li{margin:1.6rem auto}